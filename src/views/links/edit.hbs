<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="parent" class="form-control" placeholder="PARENT" value="{{link.parent}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="description" class="form-control" placeholder="DESCRIPTION" value="{{link.description}}">
                </div>
                <div class="form-group">
                    <input type="text" name="link" class="form-control" placeholder="LINK" value="{{link.link}}">
                </div>
                <div class="form-group">
                    <input type="text" name="node_order" class="form-control" placeholder="NODE ORDER" value="{{link.node_order}}">
                </div>
                <div class="form-group">
                    <select type="text" class="form-control" name="activo">
                        <option value="1">ACTIVO</option>
                        <option value="0">INACTIVO</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="usuario" class="form-control" placeholder="USUARIO" value="{{link.usuario}}">
                </div>
                <div class="form-group">
                    <input type="text" name="idempresa" class="form-control" placeholder="idempresa" value="1" value="{{link.idempresa}}">
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Save
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>